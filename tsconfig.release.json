{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "lib",
      "experimentalDecorators": true,
      "suppressImplicitAnyIndexErrors": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "removeComments": true,
      "noImplicitAny": false,
      "sourceMap": true,
      "baseUrl": "src",
      "newLine": "LF"
    },
    "include": [
      "src/**/*",
    ],
    "exclude": [
      "node_modules"
    ]
}
